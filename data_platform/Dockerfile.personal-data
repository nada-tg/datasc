# Dockerfile.personal-data - Dockerfile pour Personal Data Platform
FROM python:3.10

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt
RUN pip install psutil fastapi-users

COPY personal_data_platform.py .

# Créer les dossiers nécessaires
RUN mkdir -p collected_data processed_data anonymized_data temp

EXPOSE 8003

CMD ["uvicorn", "personal_data_platform:app", "--host", "0.0.0.0", "--port", "8003"]